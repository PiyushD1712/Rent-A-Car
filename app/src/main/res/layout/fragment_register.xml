<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="user"
            type="com.example.rent_a_car.auth.model.Users" />
    </data>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".auth.view.RegisterFragment">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:src="@drawable/wave"
                android:scaleType="fitXY"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="50dp"
                android:textStyle="bold"
                android:text="REGISTER"
                android:textSize="40sp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:orientation="vertical"
                android:padding="30dp"
                tools:layout_editor_absoluteX="-90dp"
                tools:layout_editor_absoluteY="0dp">

                <EditText
                    android:id="@+id/idAuthRegFN"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="5dp"
                    android:hint="Enter First Name" />

                <EditText
                    android:id="@+id/idAuthRegLN"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="5dp"
                    android:hint="Enter Last Name" />

                <EditText
                    android:id="@+id/idAuthRegPhnNo"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="5dp"
                    android:hint="Enter Phone Number" />

                <EditText
                    android:id="@+id/idAuthRegMail"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="5dp"
                    android:hint="Enter your Email" />

                <EditText
                    android:id="@+id/idAuthRegPassword"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="5dp"
                    android:hint="Enter your Password" />

                <Button
                    android:id="@+id/idAuthRegBtn"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:text="SIGN-UP" />
            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>
</layout>