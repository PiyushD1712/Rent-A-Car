<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.views.fragment.PersonalFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:padding="16dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="List your Car"
            android:textStyle="bold"
            android:textSize="30sp"
            android:layout_marginBottom="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Car, Model"
            android:layout_marginBottom="10dp"
            android:textSize="20sp"/>
        <EditText
            android:id="@+id/idPersonalCarEd"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Price per day"
            android:textSize="20sp"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:id="@+id/idPersonalCarPriceEd"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textSize="20sp"
            android:layout_marginBottom="10dp"/>
        <EditText
            android:id="@+id/idPersonalCarDescEd"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="10dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="Add photos"
                android:textSize="20sp"/>
            <ImageView
                android:id="@+id/idAddPhoto"
                android:layout_width="30dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"
                android:src="@drawable/camera_personal"/>
        </RelativeLayout>
        <Button
            android:id="@+id/idPersonalCarBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit Car"/>
    </LinearLayout>
</FrameLayout>